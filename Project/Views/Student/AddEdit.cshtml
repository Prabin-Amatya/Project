@model Project.Models.Student

<h3 class="text-danger">@TempData["Message"]</h3>

<form action="AddEdit" method="post">
    <input asp-for="Id" hidden/>
    <div class="form-floating">
        <input asp-for="Name" class="form-control"/>
        <label>Name</label>
        <span id="ValidName" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="Address" class="form-control" />
        <label>Address</label>
        <span id="ValidAddress" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="PhoneNumber" class="form-control" />
        <label>Phone Number</label>
        <span id="ValidPhoneNumber" class="text-danger"></span>
    </div>
    <button class="btn btn-primary" type="submit" onclick="return validForm()">Submit</button>
</form>


@section Scripts
{
        <script>
        function validForm() {

            var currValues = [$("#Name").val(),
            $("#Address").val()
            ];

            var val = '#Valid';
            var values = ['Name', 'Address'];
            var id = '';
            var isValid = true;
            for (let i = 0; i < values.length; i++) {
                id = val + values[i];
                if (!currValues[i]) {
                    $(id).text(values[i] + ' field is empty');
                    isValid = false;
                }
                else $(id).text('');
            }
            return isValid;
         }
        </script>
}
    